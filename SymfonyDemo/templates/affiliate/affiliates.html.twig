{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<a href="/newaffiliate">New</a>
<table>
    <tr>
        <th>Id</th>
        <th>Url</th>
        <th>Email</th>
        <th>Token</th>
        <th>IsActivated</th>
        <th>CreatedAt</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    {% for affiliate in affiliates %}
        <tr>
            <td>{{affiliate.getId()}}</td>
            <td>{{affiliate.getUrl()}}</td>
            <td>{{affiliate.getEmail()}}</td>
            <td>{{affiliate.getToken()}}</td>
             {% if affiliate.getIsActivate() == false %}
                <td>0</td>
            {% else %}
                <td>1</td>
            {% endif %}
            {% if affiliate.getCreatedAt() == null %}
            <td>NULL</td>
            {% else %}
                    <td>{{affiliate.getCreatedAt().format('Y-m-d')}}</td>
            {% endif %}
            <td><a href="/affiliate/{{affiliate.getId()}}">View</a></td>
            <td><a href="/editaffiliate/{{affiliate.getId()}}">Edit</a></td>
            <td><a href="/deleteaffiliate/{{affiliate.getId()}}">Delete</a></td>
        </tr>
    {% endfor %}
</table>

{% endblock %}
