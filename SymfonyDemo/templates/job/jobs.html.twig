{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<a href="/newjob">New</a>
<table style="width:100%">
  <tr>
    <th>Id</th>
    <th>Category</th>
    <th>Type</th> 
    <th>Company</th>
    <th>Logo</th>
    <th>Url</th>
    <th>Position</th>
    <th>Location</th>
    <th>Description</th>
    <th>HowToApply</th>
    <th>Token</th>
    <th>IsPublic</th>
    <th>IsActivated</th>
    <th>Email</th>
    <th>ExpiresAt</th>
    <th>CreatedAt</th>
    <th>UpdatedAt</th>
  </tr>

  {% for job in jobs %}
        <tr>
            <td>{{job.getId()}}</td>
            <td>{{job.getCategoryId().getName()}}</td>
            <td>{{job.getType()}}</td>
            <td>{{job.getCompany()}}</td>
            <td>{{job.getLogo()}}</td>
            <td>{{job.getUrl()}}</td>
            <td>{{job.getPosition()}}</td>
            <td>{{job.getLocation()}}</td>
            <td>{{job.getDescription()}}</td>
            <td>{{job.getHowToApply()}}</td>
            <td>{{job.getToken()}}</td>
            {% if job.getIsPublic() == false %}
                <td>0</td>
            {% else %}
                <td>1</td>
            {% endif %}
            {% if job.getIsActivated() == false %}
                <td>0</td>
            {% else %}
                <td>1</td>
            {% endif %}
            <td>{{job.getEmail()}}</td>

            {% if job.getExpiresAt() == null %}
                <td>NULL</td>
            {% else %}
                <td>{{job.getExpiresAt().format('Y-m-d h:m:s')}}</td>
            {% endif %}
            {% if job.getCreatedAt() == null %}
                <td>NULL</td>
            {% else %}
                <td>{{job.getCreatedAt().format('Y-m-d h:m:s')}}</td>
            {% endif %}
            {% if job.getUpdatedAt() == null %}
                <td>NULL</td>
            {% else %}
                <td>{{job.getUpdatedAt().format('Y-m-d h:m:s')}}</td>
            {% endif %}
            <td><a href="/job/{{job.getId()}}">View</a></td>
            <td><a href="/editjob/{{job.getId()}}">Edit</a></td>
            <td><a href="/deletejob/{{job.getId()}}">Delete</a></td>
        </tr>
    {% endfor %}
  </table>
 
{% endblock %}
